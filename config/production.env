# ===============================================
# CONFIGURACIÓN DE PRODUCCIÓN
# HubSpot PDF Generator
# ===============================================

# ====================================
# CONFIGURACIÓN DEL SERVIDOR
# ====================================
NODE_ENV=production
APP_PORT=3002
FRONTEND_URL=https://tudominio.com

# ====================================
# CONFIGURACIÓN DE BASE DE DATOS
# ====================================
# PostgreSQL - Producción (usar servicio cloud recomendado)
DATABASE_URL="postgresql://prod_user:secure_password@prod-db-host:5432/hubspot_pdf_prod_db?schema=public&sslmode=require"

# Redis - Producción (usar servicio cloud recomendado)
REDIS_URL="rediss://prod-redis-user:secure_password@prod-redis-host:6380"

# ====================================
# CONFIGURACIÓN DE SEGURIDAD
# ====================================
# JWT Secret - DEBE SER ÚNICO Y SEGURO (min 32 caracteres)
JWT_SECRET="production_jwt_secret_key_change_this_to_random_32_plus_characters"

# ====================================
# CONFIGURACIÓN DE HUBSPOT
# ====================================
HUBSPOT_CLIENT_ID="prod_hubspot_client_id"
HUBSPOT_CLIENT_SECRET="prod_hubspot_client_secret"
HUBSPOT_REDIRECT_URI="https://tudominio.com/api/auth/hubspot/callback"

# ====================================
# CONFIGURACIÓN DE GOTENBERG
# ====================================
# URL del servicio Gotenberg en producción
GOTENBERG_URL="http://gotenberg:3000"

# ====================================
# CONFIGURACIÓN DE ALMACENAMIENTO
# ====================================
# Usar almacenamiento en la nube en producción
AWS_S3_BUCKET="tu-bucket-produccion"
AWS_ACCESS_KEY_ID="tu_access_key_produccion"
AWS_SECRET_ACCESS_KEY="tu_secret_key_produccion"
AWS_REGION="us-east-1"

# Path local como backup (en contenedor)
STORAGE_PATH="/app/storage"
FILE_BASE_URL="https://tudominio.com/files"

# ====================================
# CONFIGURACIÓN DE COLAS
# ====================================
DOCUMENT_CONCURRENCY=4
HUBSPOT_CONCURRENCY=2
QUEUE_MAX_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=5000

# ====================================
# CONFIGURACIÓN DE LOGGING
# ====================================
LOG_LEVEL="warn"
ENABLE_REQUEST_LOGGING=false
ENABLE_DB_LOGGING=false

# ====================================
# CONFIGURACIÓN DE RENDIMIENTO
# ====================================
# Rate limiting más estricto
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Límites de archivos
MAX_FILE_SIZE_MB=20
MAX_UPLOAD_FILES=10

# ====================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ====================================
ENABLE_CORS=false
ENABLE_HOT_RELOAD=false
ENABLE_DEBUG_ROUTES=false

# ====================================
# CONFIGURACIÓN DE MONITORING
# ====================================
# Sentry para tracking de errores
SENTRY_DSN="https://tu_sentry_dsn@sentry.io/proyecto_id"

# New Relic para monitoreo
NEW_RELIC_LICENSE_KEY="tu_new_relic_license_key"
NEW_RELIC_APP_NAME="HubSpot PDF Generator - Production"

# ====================================
# CONFIGURACIÓN DE EMAIL
# ====================================
SMTP_HOST="smtp.tuproveedor.com"
SMTP_PORT=587
SMTP_USER="noreply@tudominio.com"
SMTP_PASS="password_smtp_seguro"
SMTP_FROM_EMAIL="noreply@tudominio.com"

# ====================================
# CONFIGURACIÓN DE WEBHOOKS
# ====================================
WEBHOOK_SECRET="webhook_secret_key_muy_seguro"
WEBHOOK_ENDPOINT="/api/webhooks/hubspot"
