# ===============================================
# CONFIGURACIÓN DE STAGING
# HubSpot PDF Generator
# ===============================================

# ====================================
# CONFIGURACIÓN DEL SERVIDOR
# ====================================
NODE_ENV=staging
APP_PORT=3002
FRONTEND_URL=https://staging.tudominio.com

# ====================================
# CONFIGURACIÓN DE BASE DE DATOS
# ====================================
# PostgreSQL - Staging
DATABASE_URL="postgresql://staging_user:staging_password@staging-db-host:5432/hubspot_pdf_staging_db?schema=public&sslmode=require"

# Redis - Staging
REDIS_URL="redis://staging-redis-host:6379"

# ====================================
# CONFIGURACIÓN DE SEGURIDAD
# ====================================
# JWT Secret - Diferente al de producción
JWT_SECRET="staging_jwt_secret_key_change_this_to_random_32_plus_characters"

# ====================================
# CONFIGURACIÓN DE HUBSPOT
# ====================================
# Usar app de HubSpot de staging/desarrollo
HUBSPOT_CLIENT_ID="staging_hubspot_client_id"
HUBSPOT_CLIENT_SECRET="staging_hubspot_client_secret"
HUBSPOT_REDIRECT_URI="https://staging.tudominio.com/api/auth/hubspot/callback"

# ====================================
# CONFIGURACIÓN DE GOTENBERG
# ====================================
GOTENBERG_URL="http://gotenberg:3000"

# ====================================
# CONFIGURACIÓN DE ALMACENAMIENTO
# ====================================
# Usar bucket de staging
AWS_S3_BUCKET="tu-bucket-staging"
AWS_ACCESS_KEY_ID="tu_access_key_staging"
AWS_SECRET_ACCESS_KEY="tu_secret_key_staging"
AWS_REGION="us-east-1"

STORAGE_PATH="/app/storage"
FILE_BASE_URL="https://staging.tudominio.com/files"

# ====================================
# CONFIGURACIÓN DE COLAS
# ====================================
DOCUMENT_CONCURRENCY=2
HUBSPOT_CONCURRENCY=1
QUEUE_MAX_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=3000

# ====================================
# CONFIGURACIÓN DE LOGGING
# ====================================
# Más verbose para staging
LOG_LEVEL="info"
ENABLE_REQUEST_LOGGING=true
ENABLE_DB_LOGGING=false

# ====================================
# CONFIGURACIÓN DE RENDIMIENTO
# ====================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=75

MAX_FILE_SIZE_MB=15
MAX_UPLOAD_FILES=8

# ====================================
# CONFIGURACIÓN DE STAGING
# ====================================
ENABLE_CORS=true
ENABLE_HOT_RELOAD=false
ENABLE_DEBUG_ROUTES=true

# ====================================
# CONFIGURACIÓN DE MONITORING
# ====================================
# Sentry para staging (proyecto separado)
SENTRY_DSN="https://tu_sentry_dsn_staging@sentry.io/proyecto_staging"

# ====================================
# CONFIGURACIÓN DE EMAIL
# ====================================
# Usar servicio de email de prueba
SMTP_HOST="smtp.mailtrap.io"
SMTP_PORT=2525
SMTP_USER="tu_mailtrap_user"
SMTP_PASS="tu_mailtrap_password"
SMTP_FROM_EMAIL="staging@tudominio.com"
